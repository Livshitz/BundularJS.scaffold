.layout-content.b-g-checked
	#container.view-container
		.box-header(layout="row",layout-align="space-between center")
			a(href="/")
				h1.no-margin 
					span.md-icons.huge developer_board&nbsp;
					span(style="top:1px; position:relative;") BundularJS
			.box-user(ng-cloak)
				div(ng-show="user") 
					div(layout="row")
						div
							div.small.bold {{ profile.displayName || user.email || user.id }}
							a.place-right.small(ng-click="libx.browser.userManager.signOut()") logout
						.avatar.avatar-small
							img(ng-src='https://avatars.dicebear.com/v2/jdenticon/{{profile.displayName}}.svg')

				div(ng-show="!profile.displayName")
					a(ng-click="libx.browser.userManager.signInGoogle()") login


